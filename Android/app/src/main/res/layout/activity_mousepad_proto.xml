<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.potatosoft.remote.phoneremote.MousepadProto">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_vertical_center"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_horizontal_center"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_vertical_25"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_vertical_75"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_horizontal_bottom_75"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.875" />

    <TableLayout
        android:id="@+id/layout_top_tabs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </TableLayout>


    <Button
        android:id="@+id/button_left_click"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideline_vertical_center"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="left click"
        android:gravity="center|bottom"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"
        android:onClick=""
        />

    <Button
        android:id="@+id/button_right_click"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical_center"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="right click"
        android:gravity="center|bottom" />

    <Button
        android:id="@+id/button_mouse_nub"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical_25"
        app:layout_constraintRight_toRightOf="@id/guideline_vertical_75"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal_center"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_bottom_75"
        android:text="O" />





</android.support.constraint.ConstraintLayout>
